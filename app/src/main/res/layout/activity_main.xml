<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/white_to_red"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/imageView"
            android:background="@drawable/title_header"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="50dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="PURCHASE"
            android:id="@+id/button"
            android:background="@drawable/purchasebtn"
            android:onClick="myMeth"
            android:layout_marginTop="20dp"
            android:textColor="@color/darkGrey"
            android:textSize="40dp"
            android:textAlignment="center" />

        <ImageButton
            android:background="@drawable/sharemembtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:onClick="postClick"
            android:id="@+id/button2"
            android:layout_marginTop="20dp"
            />



        <ImageButton
            android:background="@drawable/donatebtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button3"
            android:layout_marginTop="20dp"
            android:textColor="@color/darkGrey"
            android:onClick="donateClick" />

        <ImageButton
            android:background="@drawable/learnmore_button"
            android:layout_width="match_parent"
            android:onClick="loginScreen"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>
